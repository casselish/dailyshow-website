<!doctype html>
<html lang="en">

  <%- include('global/header', {title: data.title}); %>
  <%- include('global/navbar'); %>

  <div class="container-fluid">
    <div class="row justify-content-md-center">
      <div class="col-2"> <h4>Title</h4></div>
      <div class="col"><h1><%= data.title %> </h1> </div>
    </div>
    <div class="row justify-content-md-center">
      <div class="col-2"> <h4>Date</h4></div>
      <div class="col"> <h2><%= data.date %> </h2> </div>
    </div>
    <div class="row justify-content-md-center">
      <div class="col-2"> <h4>Time</h4></div>
      <div class="col"><h2><%= data.time %> </h2> </div>
    </div>
    <div class="row justify-content-md-center">
      <div class="col-2"><h4>Content</h4></div>
      <div class="col">
        <% data.content.forEach(function(paragraph) {%>
          <%=paragraph%>
          <br />
          <br />
          <%})%>
      </div>
    </div>
    <div class="row justify-content-md-center">
      <div class="col-2"> <h4>Tags</h4></div>
      <div class="col">
        <button class="btn btn-primary" type="button" data-toggle="collapse" data-target="#collapseExample" aria-expanded="false" aria-controls="collapseExample">Click to show tags</button>
        <div class="collapse">
          <div class="card card-body">
            <% if (data.subject.length > 0){ %>
              <ol>
                <% data.subject.forEach(function(val){%>
                  <li> <%=val%></li>
                  <%}) %>
              </ol>
            <%}%>
          </div>
        </div>
      </div>
  </div>
</div>


    <%- include('global/footer'); %>
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js" integrity="sha384-DfXdz2htPH0lsSSs5nCTpuj/zy4C+OGpamoFVy38MVBnE+IbbVYUew+OrCXaRkfj" crossorigin="anonymous"></script>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.5.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ho+j7jyWK8fNQe+A12Hb8AhRq26LrZ/JpcUGGOn+Y7RsweNrtN/tE3MoK7ZeZDyx" crossorigin="anonymous"></script>
</body>

</html>
